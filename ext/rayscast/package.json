{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "trovu",
  "title": "Trovu",
  "description": "Search 1000+ websites in a command-line way, with curated and personal shortcuts, organized by namespaces, allowing multiple and typed arguments, with maximum privacy.",
  "icon": "command-icon.png",
  "author": "jorges",
  "owner": "trovu",
  "categories": [
    "Web"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Call Trovu shortcut",
      "description": "Send a query to trovu.net",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "key": "language",
      "title": "Language",
      "description": "Choose your language",
      "type": "dropdown",
      "required": true,
      "options": [
        {
          "value": "en",
          "label": "English"
        },
        {
          "value": "es",
          "label": "Spanish"
        }
      ]
    },
    {
      "key": "country",
      "title": "Country",
      "description": "Choose your country",
      "type": "dropdown",
      "required": true,
      "options": [
        {
          "value": "us",
          "label": "United States"
        },
        {
          "value": "es",
          "label": "Spain"
        }
      ]
    }
  ]
  "dependencies": {
    "@raycast/api": "^1.75.2",
    "@raycast/utils": "^1.4.8"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}